@inherits BaseComponent
@code {
    [CascadingParameter]
    public bool CascadingDisabled { get; set; } = false;

    private bool _disabled = false;
    [Parameter]
    public bool Disabled 
    { 
        get 
        { 
            return _disabled || CascadingDisabled;  
        } 
        set 
        { 
            _disabled = value; 
        } 
    }
}
